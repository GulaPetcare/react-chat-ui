{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "strict": true,
    "moduleResolution": "node",
    "lib": [
      "dom",
      "esnext"
    ],
    "jsx": "react",
    "sourceMap": true,
    "allowJs": true,
    "noEmit": true
  },
  "typeRoots": [
    "node_modules/@types"
  ],
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
